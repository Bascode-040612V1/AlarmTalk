<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/accent_red"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/card_gradient_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_mic"
            app:tint="@color/white"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textVoiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voice_1"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textVoiceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorded on Jan 1, 2023"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textVoiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 00:05"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imagePlayButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_music_note"
            app:tint="@color/accent_red"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp" />

        <!-- Three dots menu -->
        <ImageButton
            android:id="@+id/buttonVoiceMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voice recording options"
            app:tint="@color/white"
            android:padding="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>