<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Current Time Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_xlarge"
            android:background="@drawable/time_background"
            android:padding="@dimen/text_size_xxxlarge">

            <TextView
                android:id="@+id/textCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="@dimen/text_size_huge"
                android:textColor="@color/primary_text"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="@dimen/spacing_small" />

        </LinearLayout>

        <!-- Alarms Title with Info Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_large">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Alarms"
                android:textSize="@dimen/text_size_xxlarge"
                android:textColor="@color/primary_text"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/buttonInfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_info"
                android:contentDescription="Contact Developers"
                app:tint="@color/accent_blue" />

        </LinearLayout>

        <!-- Alarms List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAlarms"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/textEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="No alarms set"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Floating Action Button for Adding Alarms -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_large"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/fab_color"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>