<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Current Time Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_xlarge"
        android:background="@drawable/time_background"
        android:padding="@dimen/text_size_xxxlarge">

        <TextView
            android:id="@+id/textCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="@dimen/text_size_huge"
            android:textColor="@color/primary_text"
            android:fontFamily="monospace"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="@dimen/spacing_small" />

    </LinearLayout>

    <!-- Alarms Title with Info Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_large">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Alarms"
            android:textSize="@dimen/text_size_xxlarge"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/buttonInfo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_info"
            android:contentDescription="Information"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Alarms List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAlarms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="80dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/textEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No alarms set"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>