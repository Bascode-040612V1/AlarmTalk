<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Time Picker Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:timePickerMode="spinner"
                    style="@style/Widget.Alarm.TimePicker" />

            </LinearLayout>

            <!-- Alarm Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <!-- Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/alarm_title"
                    app:hintTextColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Note -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/note"
                    app:hintTextColor="@color/white"
                    app:boxStrokeColor="@color/white"
                    app:counterEnabled="true"
                    app:counterMaxLength="200"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:gravity="top"
                        android:minLines="3"
                        android:maxLines="5"
                        android:maxLength="200" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Text-to-Speech Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Turn on to use the Text to Speech"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="4dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTtsOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Text-to-Speech"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:checked="false" />

                </LinearLayout>

            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- Repeat Days Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/repeat_days"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/buttonEveryday"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/everyday"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/accent_red"
                        android:minWidth="80dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:fadeScrollbars="false"
                    android:fillViewport="false"
                    android:scrollbarStyle="outsideOverlay">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:singleLine="true"
                        app:chipSpacing="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMonday"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monday"
                            android:textColor="@color/chip_text_unselected"
                            app:chipBackgroundColor="@color/chip_unselected"
                            android:minWidth="90dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTuesday"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tuesday"
                            android:textColor="@color/chip_text_unselected"
                            app:chipBackgroundColor="@color/chip_unselected"
                            android:minWidth="90dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipWednesday"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wednesday"
                            android:textColor="@color/chip_text_unselected"
                            app:chipBackgroundColor="@color/chip_unselected"
                            android:minWidth="90dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipThursday"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/thursday"
                            android:textColor="@color/chip_text_unselected"
                            app:chipBackgroundColor="@color/chip_unselected"
                            android:minWidth="90dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFriday"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/friday"
                            android:textColor="@color/chip_text_unselected"
                            app:chipBackgroundColor="@color/chip_unselected"
                            android:minWidth="90dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSaturday"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/saturday"
                            android:textColor="@color/chip_text_unselected"
                            app:chipBackgroundColor="@color/chip_unselected"
                            android:minWidth="90dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSunday"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sunday"
                            android:textColor="@color/chip_text_unselected"
                            app:chipBackgroundColor="@color/chip_unselected"
                            android:minWidth="90dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />

                    </com.google.android.material.chip.ChipGroup>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- Volume Control Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_volume"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <!-- Single Alarm Volume Control -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alarm_volume"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <SeekBar
                        android:id="@+id/seekBarRingtoneVolume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="80" />

                    <TextView
                        android:id="@+id/textRingtoneVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- HIDE Voice Volume Control -->
                <LinearLayout
                    android:id="@+id/layoutVoiceVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alarm_volume"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <SeekBar
                            android:id="@+id/seekBarVoiceVolume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="100" />

                        <TextView
                            android:id="@+id/textVoiceVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <!-- HIDE TTS Volume Control -->
                <LinearLayout
                    android:id="@+id/layoutTtsVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alarm_volume"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <SeekBar
                            android:id="@+id/seekBarTtsVolume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="100" />

                        <TextView
                            android:id="@+id/textTtsVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="16sp"
                        android:textColor="@color/white"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- Ringtone Selection Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ringtone"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/spinnerRingtone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ringtone_box_background"
                    android:padding="12dp"
                    android:popupBackground="@drawable/card_gradient_background" />

            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- Snooze Duration Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snooze_duration"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/spinnerSnooze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ringtone_box_background"
                    android:padding="12dp"
                    android:popupBackground="@drawable/card_gradient_background" />

            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- Vibration Toggle Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchVibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vibration"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:checked="true" />

            </LinearLayout>

            <!-- Advanced Settings Toggle -->
            <LinearLayout
                android:id="@+id/layoutAdvancedToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Advanced Settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imageArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Expand/Collapse"
                        app:tint="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Advanced Settings Panel (Hidden by default) -->
            <LinearLayout
                android:id="@+id/layoutAdvancedSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Voice Recording Section (Moved to Advanced Settings) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/voice_recording"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/buttonRecordVoice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Record"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/accent_red"
                            style="@style/Widget.MaterialComponents.Button" />

                        <Button
                            android:id="@+id/buttonPlayVoice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Play"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/accent_red"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textVoiceStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_voice_recording"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                        
                    <!-- Recording Timer -->
                    <TextView
                        android:id="@+id/textRecordingTimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />
                        
                    <!-- Voice Management Button -->
                    <Button
                        android:id="@+id/buttonManageVoiceRecordings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Voice Recordings"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/accent_red"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.MaterialComponents.Button" />
                        
                    <!-- Simultaneous Playback Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/simultaneous_playback_description"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginBottom="4dp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSimultaneousPlayback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_simultaneous_playback"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:checked="false" />
                            
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/delete_color"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Button" />

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/accent_red"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>